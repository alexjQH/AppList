<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip">

        <ImageView
            android:id="@+id/imgAppIcon"
            android:layout_width="@android:dimen/app_icon_size"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dip" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dip"
            android:layout_marginLeft="10dip" >

            <TextView
                android:id="@+id/tvAppLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="5dip"
                android:text="AppName" />

            <TextView
                android:id="@+id/tvVersionName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvAppLabel"
                android:layout_marginTop="3dip"
                android:text="Version" />

        </RelativeLayout>

    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="25dip">

        <TextView
            android:id="@+id/tvPkgNameLabel"
            android:layout_width="@android:dimen/app_icon_size"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_row="0"
            android:layout_column="0"
            android:text="包名" />

        <TextView
            android:id="@+id/tvPkgName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:text="PackageName" />

        <TextView
            android:id="@+id/tvPkgPathLabel"
            android:layout_width="@android:dimen/app_icon_size"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_row="1"
            android:layout_column="0"
            android:text="路径" />

        <TextView
            android:id="@+id/tvPkgPath"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:text="PackagePath" />

    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="25dip">

        <TextView
            android:id="@+id/tvPkgSizeLabel"
            android:layout_width="75dip"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:text="程序大小" />
        <TextView
            android:id="@+id/tvPkgSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:text="PackageSize" />

        <TextView
            android:id="@+id/tvDataSizeLabel"
            android:layout_width="75dip"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:text="数据大小" />
        <TextView
            android:id="@+id/tvDataSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:text="DataSize" />

        <TextView
            android:id="@+id/tvCacheSizeLabel"
            android:layout_width="75dip"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:text="缓存大小" />

        <TextView
            android:id="@+id/tvCacheSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="1"
            android:text="CacheSize" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:text="" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="0"
            android:text="" />

    </GridLayout>

</LinearLayout>